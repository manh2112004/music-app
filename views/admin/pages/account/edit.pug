extends ../../layout/default.pug

block main
    .container-fluid
        .d-flex.justify-content-between.align-items-center.mb-4
            h3.mb-0 Chỉnh sửa tài khoản Admin
            a.btn.btn-secondary(href="/admin/accounts")
                i.fa.fa-arrow-left.mr-1
                | Quay lại

        .card.shadow-sm
            .card-body
                form(action=`/admin/accounts/editPost/${account._id}` method="POST" enctype="multipart/form-data")
                    .form-group
                        label(for="fullName") Họ và tên
                        input.form-control(
                            type="text",
                            id="fullName",
                            name="fullName",
                            required,
                            value=account.fullName
                        )

                    .form-group
                        label(for="email") Email
                        input.form-control(
                            type="email",
                            id="email",
                            name="email",
                            required,
                            value=account.email
                        )

                    .form-group
                        label(for="password") Mật khẩu
                        input.form-control(
                            type="password",
                            id="password",
                            name="password",
                            placeholder="Để trống nếu không đổi"
                        )

                    .form-group
                        label(for="phone") Số điện thoại
                        input.form-control(
                            type="text",
                            id="phone",
                            name="phone",
                            value=account.phone
                        )

                    .form-group
                        label(for="avatar") Ảnh đại diện
                        input.form-control-file(
                            type="file",
                            name="avatar",
                            accept="image/*"
                        )
                        if account.avatar
                            img.img-thumbnail.mt-2(
                                src=account.avatar,
                                alt="Avatar",
                                width="100"
                            )

                    .form-group
                        label(for="status") Trạng thái
                        select.form-control(name="status" id="status")
                            option(value="active", selected=account.status === 'active') Kích hoạt
                            option(value="inactive", selected=account.status === 'inactive') Tạm khóa

                    button.btn.btn-primary.mt-3(type="submit")
                        i.fa.fa-save.mr-1
                        | Lưu thay đổi
