extends ../../layout/default.pug
block main
    h1(class="mb-4") #{pageTitle}

    .card.mb-3
        .card-header.d-flex.justify-content-between.align-items-center
            h5.mb-0 Danh sách ca sĩ
            a(href=`${prefixAdmin}/singers/create`, class="btn btn-outline-success")
                i(class="fa fa-plus mr-1")
                | Thêm mới

        .card-body
            table.table.table-bordered.table-hover
                thead.table-dark
                    tr.text-center
                        th(width="5%") #
                        th(width="15%") Ảnh đại diện
                        th(width="25%") Họ tên
                        th(width="15%") Trạng thái
                        th(width="15%") Hành động
                tbody
                    if singers && singers.length
                        each singer, index in singers
                            tr.text-center
                                td #{index + 1}
                                td
                                    img(src=singer.avatar, alt=singer.fullName, width="70", height="70", class="rounded-circle border")
                                td #{singer.fullName}
                                td 
                                    if singer.status === "active"
                                        span.badge.badge-success Hoạt động
                                    else
                                        span.badge.badge-secondary Dừng hoạt động
                                td
                                    a(href=`${prefixAdmin}/singers/edit/${singer._id}`, class="btn btn-sm btn-outline-primary mr-2")
                                        i(class="fa fa-pen")
                                    a( class="btn btn-sm btn-outline-danger", 
                                        button-delete
                                        data-id=singer._id
                                    )
                                        i(class="fa fa-trash")
                    else
                        tr.text-center
                            td(colspan="6") Không có dữ liệu ca sĩ nào.
    block scripts
        script(src="/admin/js/singer.js")
