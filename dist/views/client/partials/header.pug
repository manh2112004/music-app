header.header
    .container
        .row.align-items-center
            .col-2
                .inner-logo
                    a(href="/")
                        img(src="https://tse4.mm.bing.net/th/id/OIP.htCCCQY45SlDPdEy4ijKYwHaHa?rs=1&pid=ImgDetMain&o=7&rm=3", alt="Logo")
            .col-4
                .box-search
                    form(action="/search/result" method="GET")
                        div.form-group.d-flex.mb-0
                            input(
                                type="text"
                                placeholder="Nhập từ khoá..."
                                class="form-control"
                                name="keyword"
                                value=keyword
                            )
                            button(type="submit" class="btn btn-primary") Tìm
                    .inner-suggest
                        .inner-list
            .col-6
                .menu-toggle
                    i.fas.fa-bars
                .inner-menu.d-flex.justify-content-end.align-items-center
                    ul.d-flex.mb-0
                        li
                            a(href="/") <i class="fa-solid fa-house"></i> Trang chủ
                        li
                            a(href="/topics") <i class="fa-solid fa-music"></i> Chủ đề
                        if user
                            li
                                a(href="/favorite-songs") <i class="fa-solid fa-heart"></i> Yêu thích
                            li
                                a(href="/playlists/") 
                                    i.fa-solid.fa-list-ul
                                    |   Playlist
                        else
                            li
                                a(href="/users/login") <i class="fa-solid fa-heart"></i> Yêu thích
                    .auth-buttons.ms-3.ml-5
                    if user
                        a(href="/users/profile")
                            if user.avatar
                                img.rounded-circle(
                                    src=user.avatar,
                                    alt="User Avatar",
                                    width="35",
                                    height="35"
                                )
                            else
                                i.fas.fa-user-circle.fa-2x.text-white
                        a.btn.btn-danger.ms-2.ml-3(href="/users/logout") Đăng xuất
                    else
                        a.btn.btn-outline-primary.mr-3(href="/users/login") Đăng nhập
                        a.btn.btn-primary.ms-2(href="/users/register") Đăng ký

