doctype html
html
    head
        title Trang đăng nhập
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css")
        link(rel="stylesheet", href="/admin/css/login.css")
    body
        .login-container
            .card
                h3.text-center Đăng nhập Admin
                form(action="/admin/auth/loginPost" method="POST")
                    if errorMessage
                        .alert.alert-danger #{errorMessage}
                    .form-group
                        label(for="email") Email
                        input#email.form-control(type="email", name="email", placeholder="Nhập email", required)
                    .form-group
                        label(for="password") Mật khẩu
                        input#password.form-control(type="password", name="password", placeholder="Nhập mật khẩu", required)
                    .form-group.form-check
                        input#remember.form-check-input(type="checkbox", name="remember")
                        label.form-check-label(for="remember") Ghi nhớ đăng nhập
                    button.btn.btn-primary.btn-block(type="submit") Đăng nhập
