{
  "compilerOptions": {
    "outDir": "dist", //biên dịch vào thư mục js
    "target": "ES6", // cho phép biên dịch code ts sang ES6
    "module": "commonjs", //commonJS là tiêu chuẩn được sử dụng trong nodeJS để làm việc với các module
    "removeComments": true, // xoá comment sau khi biên dịch sang js
    "esModuleInterop": true //dùng được từ khoá import thay từ require
  }
}
